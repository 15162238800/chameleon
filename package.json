{
  "scripts": {
    "test": "grunt test",
    "lint": "grunt lint",
    "prebuild": "npm install",
    "build":"npm run build:sticky",
    "build:sticky": "mkdir -p resources/js/sticky-kit && browserify node_modules/sticky-kit/dist/sticky-kit.js -o resources/js/sticky-kit/jquery.sticky-kit.js"
