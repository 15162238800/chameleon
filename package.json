  "devDependencies": {
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "grunt": "^0.4.0",
    "grunt-banana-checker": "^0.4.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-jsonlint": "^1.0.7"
  },
	"dependencies": {
    "sticky-kit": "^1.1.3"
  },
  "browserify-shim": {
    "../../resources/lib/jquery/jquery.js": {
      "exports": [ "jquery", "$" ]
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
